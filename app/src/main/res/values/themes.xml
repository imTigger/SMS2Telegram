<resources>
    <style name="Theme.SmsForwarder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="android:statusBarColor">@color/md_theme_primary</item>
        <item name="android:navigationBarColor">@color/md_theme_primary</item>
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="android:textColorPrimary">@color/md_theme_onPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.SmsForwarder.ToolbarPopup</item>
    </style>

    <style name="ThemeOverlay.SmsForwarder.ToolbarPopup" parent="ThemeOverlay.MaterialComponents">
        <item name="android:textColorPrimary">@color/md_theme_onPrimary</item>
        <item name="android:textColorSecondary">@color/md_theme_onPrimary</item>
        <item name="android:colorBackground">@color/md_theme_primary</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.SmsForwarder.PopupItem</item>
    </style>

    <style name="TextAppearance.SmsForwarder.PopupItem" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>
</resources>
